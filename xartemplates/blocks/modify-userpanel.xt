<?xml version="1.0" encoding="utf-8"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
<div class="xar-form-input-wrapper">
    <p class="xar-form-container-after">
        This block provides the same data found in includes/userpanel.xd. It is recommended that you don't cache this block if you select any of the time options.
    </p>
</div>
<div class="xar-form-input-wrapper-after">
    <xar:data-input type="checkbox" name="showusername" id="showusername" value="$showusername" />
    <label for="showusername">Show user name?</label>
</div>
<div class="xar-form-input-wrapper-after">
    <xar:data-input type="checkbox" name="showaccount" id="showaccount" value="$showaccount" />
    <label for="showaccount">Show link to user account?</label>
</div>
<div class="xar-form-input-wrapper-after">
    <xar:data-input type="checkbox" name="showtimenow" id="showtimenow" value="$showtimenow" />
    <label for="showtimenow">Show current time?</label>
</div>
<div class="xar-form-input-wrapper-after">
    <xar:data-input type="checkbox" name="showlastvisit" id="showlastvisit" value="$showlastvisit" />
    <label for="showlastvisit">Show last visit time?</label>
</div>
<div class="xar-form-input-wrapper-after">
    <xar:data-input type="checkbox" name="showthisvisit" id="showthisvisit" value="$showthisvisit" />
    <label for="showthisvisit">Show current visit duration?</label>
</div>
<div class="xar-form-input-wrapper-after">
    <xar:data-input type="checkbox" name="showtotalvisit" id="showtotalvisit" value="$showtotalvisit" />
    <label for="showtotalvisit">Show total visits duration?</label>
</div>
<div class="xar-form-input-wrapper-after">
    <xar:data-input type="checkbox" name="showwaiting" id="showwaiting" value="$showwaiting" />
    <label for="showwaiting">Show waiting content link?</label>
</div>
<div class="xar-form-input-wrapper-after">
    <xar:data-input type="checkbox" name="showlogout" id="showlogout" value="$showlogout" />
    <label for="showlogout">Show logout link?</label>
</div>
</xar:template>